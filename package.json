{
  "name": "mentor-hub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --turbopack",
    "start": "next start --turbopack",
    "lint": "next lint",
    "db:migrate": "bun prisma migrate dev --name init",
